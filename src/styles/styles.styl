// http://tj.github.io/nib/
@import 'nib'

.input
    display: block
    position: relative
    padding: 5px
    margin: 15px 0
    vertical-align: top

    &[disabled]
        opacity: 0.8

    .md-block
        display: block

    .input__label
        position: absolute
        bottom: 100%
        left: 0
        right: auto

        color: rgba(0,0,0,0.26)

        order: 1
        pointer-events: none
        -webkit-font-smoothing: antialiased
        padding-left: 10px
        padding-right: 0
        transform: translate3d(0,28px,0) scale(1)
        transition: transform cubic-bezier(.25,.8,.25,1) .25s
        transform-origin: left top

    .input__field
        vertical-align: baseline
        font-size: 100%

        order: 2
        display: block
        margin-top: 0
        background: 0 0
        padding: 2px 2px 1px
        line-height: 26px
        height: 30px
        border-width: 0
        width: 100%
        box-sizing: border-box

        &:focus
            outline: none

    .input__bar
        position:relative
        display:block
        width: 100%

        &:before
        &:after
            content:''
            width: 100%
            position: absolute
            top: 0
            left: 0
            border-radius: 0
            border-style: solid

        &:before
            border-width: 0 0 1px
            border-color: rgba(0,0,0,0.12)

        &:after
            border-width: 0 0 2px
            border-color: #448AFF
            transform: scale(0)
            transition: transform cubic-bezier(.25,.8,.25,1) .25s
            transform-origin: left top

    &:after
        content: ''
        display: table
        clear: both

    &.input--focused,
    &.input--has-value
        .input__label
            transform: translate3d(0, 10px, 0) scale(.75)
            margin: 0

    &.input--has-value
        .input__label
            color: rgba(0,0,0,0.54)

    &.input--focused
        .input__label
            color: #448AFF

        .input__bar:after
            transform: scale(1)

    &.input--invalid
        .input__label
            color: red

        .input__bar
            &:before
            &:after
                border-color: red

    .char-count
        font-size: 12px
        float: right
        opacity: 0.5

.error-messages
    position: relative
    order: 4
    overflow: hidden

    .error-message
        font-size: 12px
        line-height: 14px
        overflow: hidden
        opacity: 1
        margin-top: 0
        padding-top: 5px
        color: red
        transition: all .3s cubic-bezier(.55,0,.55,.2)

.mdl-button
    &, &.mdl-button--accent
        &, &.mdl-button--raised
            &.btn-danger
                background-color: #d9534f
                border-color: #d43f3a
                color: #fff
