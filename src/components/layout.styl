.layout
    // all
    position: static
    overflow: hidden
    width: 100%
    background-color: #fff

    &:before,
    &:after
        content: ' '
        display: table

    &:after
        clear: both

    .layout__left,
    .layout__content,
    .layout__right
        position: relative
        float: left
        // min-height: 512px
        background: inherit
        overflow: auto
        transition: all cubic-bezier(.25,.8,.25,1) .25s, width 0.1ms
        transform-origin: left top

    .layout__overlay
        display: none
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: #000
        content: ' '
        opacity: 0
        visibility: hidden
        transition: all cubic-bezier(.25,.8,.25,1) .25s

    &[data-width=small]
        > .layout__content
            width: 100%
            left: 0

        > .layout__left,
        > .layout__right
            position: absolute
            width: 83.33333333%
            height: 100%

        > .layout__left
            transform: translate3d(-100%, 0, 0)
            top: 0
            left: 0

        > .layout__right
            left: 100%

        &.layout-open-left
            > .layout__left
                transform: translate3d(0, 0, 0)

            > .layout__overlay-center
                display: block
                visibility: visible
                opacity: 0.5

        &.layout-open-right
            > .layout__overlay-left
                display: block
                visibility: visible
                opacity: 0.5

            &.layout-open-left > .layout__left
                transform: translate3d(-100%, 0, 0)

            > .layout__right
                transform: translate3d(-100%, 0, 0)

    &[data-width=large]
        &.layout-has-left > .layout__content
            width: 76.5625%
            left: 23.4375%

        > .layout__left,
        > .layout__right
            width: 23.4375%

        > .layout__left
            right: 76.5625%

        > .layout__right
            position: absolute
            left: 100%
            height: 100%

        &.layout-open-right
            > .layout__overlay-left
                display: block
                visibility: visible
                opacity: 0.5

        &.layout-open-right > .layout__right
            transform: translate3d(-100%, 0, 0)

    &[data-width=extra-large]
        > .layout__left,
        > .layout__right
            width: 20%

        &.layout-has-left
            > .layout__content
                width: 80%
                left: 20%

            > .layout__left
                right: 80%

        &.layout-has-right
            > .layout__content
                width: 80%

        &.layout-has-left.layout-has-right
            > .layout__content
                width: 60%
                left: 20%

            > .layout__left
                right: 60%
