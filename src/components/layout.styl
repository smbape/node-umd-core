// http://visionmedia.github.com/nib/
@import 'nib'

.layout
    // all
    position: static
    overflow: hidden
    width: 100%
    background-color: #fff

    &:before,
    &:after
        content: ' '
        display: table

    &:after
        clear: both

    .layout__left,
    .layout__content,
    .layout__right
        position: relative
        float: left
        // min-height: 512px
        background: inherit
        overflow: auto
        -webkit-overflow-scrolling: touch
        transition: all cubic-bezier(.25,.8,.25,1) .25s, width 0.1ms
        transform-origin: left top

    .layout__overlay
        // display: none
        position: absolute
        top: 0
        width: 100%
        height: 100%
        background-color: #000
        content: ' '
        opacity: 0
        transition: all cubic-bezier(.25,.8,.25,1) .25s

    &[data-umd-layout-width=small]
        > .layout__content
            width: 100%
            left: 0

        > .layout__left,
        > .layout__right
            position: absolute
            width: 90%
            height: 100%

        > .layout__overlay-center,
        > .layout__left
            transform: translate3d(-100%, 0, 0)
            top: 0
            left: 0

        > .layout__overlay-left,
        > .layout__right
            left: 100%

    &[data-umd-layout-width=large]
        > .layout__overlay-center
            display: none

        &.layout-has-left > .layout__content
            width: 75%
            left: 25%

        > .layout__left,
        > .layout__right
            width: 25%

        > .layout__left
            right: 75%

        > .layout__overlay-left,
        > .layout__right
            position: absolute
            left: 100%
            height: 100%

    &[data-umd-layout-width=extra-large]
        > .layout__overlay
            display: none

        > .layout__left,
        > .layout__right
            width: 20%

        &.layout-has-left
            > .layout__content
                width: 80%
                left: 20%

            > .layout__left
                right: 80%

        &.layout-has-right
            > .layout__content
                width: 80%

        &.layout-has-left.layout-has-right
            > .layout__content
                width: 60%
                left: 20%

            > .layout__left
                right: 60%
