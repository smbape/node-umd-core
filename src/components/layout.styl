.layout
    // all
    position: relative
    overflow: hidden
    width: 100%
    
    &:before,
    &:after
        content: ' '
        display: table
    
    &:after
        clear: both

    .layout__left,
    .layout__content,
    .layout__right
        position: relative
        float: left
        transition: all cubic-bezier(.25,.8,.25,1) .25s
        transform-origin: left top
        // height: 512px
        background: inherit

    &[data-width=small]
        .layout__content
            width: 100%
            left: 0

        .layout__left,
        .layout__right
            position: absolute
            width: 83.33333333%
        
        .layout__left
            transform: translate3d(-100%, 0, 0)

        .layout__right
            left: 100%

        &.layout-open-left
            > .layout__left
                transform: translate3d(0, 0, 0)

            > .layout__overlay-center:before
                content: ' '
                width: 100%
                height: 100%
                position: absolute
                top: 0
                left: 0
                background-color: #000
                opacity: 0.5

        &.layout-open-right
            > .layout__overlay-left:before
                content: ' '
                width: 100%
                height: 100%
                position: absolute
                top: 0
                left: 0
                background-color: #000
                opacity: 0.5

            &.layout-open-left > .layout__left
                transform: translate3d(-100%, 0, 0)

            > .layout__right
                transform: translate3d(-100%, 0, 0)

    &[data-width=large]
        .layout__content
            width: 76.5625%
            left: 23.4375%

        .layout__left,
        .layout__right
            width: 23.4375%

        .layout__left
            right: 76.5625%

        .layout__right
            position: absolute
            left: 100%

        &.layout-open-right
            > .layout__overlay-left:before
                content: ' '
                width: 100%
                height: 100%
                position: absolute
                top: 0
                left: 0
                background-color: #000
                opacity: 0.5

        &.layout-open-right > .layout__right
            transform: translate3d(-100%, 0, 0)

    &[data-width=extra-large]
        .layout__content
            width: 60%
            left: 20%

        .layout__left,
        .layout__right
            width: 20%

        .layout__left
            right: 60%
